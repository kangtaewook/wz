<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist_wezone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.vinetech.wezone.Wezone.WezoneManagerActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--타이틀 정보 관리-->

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.11">


                    <RelativeLayout
                        android:id="@+id/activity_regist_wezone_iamge"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@color/cardview_dark_background">

                        <ImageView
                            android:id="@+id/image_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/above_shadow"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="11dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginRight="11dp"
                            app:srcCompat="@drawable/btn_add_photo_white" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/activity_regist_wezone_iamge"

                        android:orientation="horizontal">


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativelaoyt_wezone_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="34dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/wezone_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_bunny_image"
                                android:layout_weight="1" />
                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/relativelayout_btn_camera"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/btn_circle_white" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_add_a_photo_black" />

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/write_wezone_title_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/edit_wezone_title_textview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="타이틀" />

                        <EditText
                            android:id="@+id/wezone_title_eidittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/edit_wezone_title_textview1"
                            android:background="@drawable/selector_edittext_states"
                            android:hint="새 타이틀을 입력하세요."
                            android:maxLines="1"
                            android:textSize="15dp"
                            android:singleLine="true"
                            android:lines="1"
                            android:ellipsize="end"
                            android:imeOptions="actionNext"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_wezone_title_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/edit_wezone_title_eidittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="타이틀" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/btn_chevron_right_black" />

                        <TextView
                            android:id="@+id/edit_wezone_title_textview"
                            android:layout_width="match_parent"
                            android:layout_toEndOf="@+id/edit_wezone_title_eidittext"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/imageView3"
                            android:text="TextView"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:singleLine="true"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_wezone_introduction_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/edit_wezone_introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:text="소개" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            app:srcCompat="@drawable/btn_chevron_right_black" />

                        <TextView
                            android:id="@+id/edit_wezone_introduction_textview"
                            android:layout_width="match_parent"
                            android:layout_toEndOf="@+id/edit_wezone_introduction"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/imageView8"
                            android:gravity="right"
                            android:text="TextView"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:orientation="vertical"></LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/write_wezone_introduction_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="소개" />

                        <EditText
                            android:id="@+id/wezone_intru_eidittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/textView1"
                            android:background="@drawable/selector_edittext_states"
                            android:hint="소개 문구 또는 해시태그를 작성해 주세요."
                            android:maxLines="1"
                            android:textSize="15dp"
                            android:singleLine="true"
                            android:lines="1"
                            android:imeOptions="actionDone"/>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/black4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout3"
                    android:background="#eeeeee"
                    android:orientation="vertical"
                    android:padding="5dp"></LinearLayout>


                <!-- 거리 범위 관리-->

                <LinearLayout
                    android:id="@+id/linearlayout_btn_select_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/black2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:paddingRight="2dp"
                            app:srcCompat="@drawable/btn_chevron_right_black" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_zoom_out_map_black" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/imageView16"
                            android:layout_toRightOf="@+id/imageView16"
                            android:text="위치 인식" />

                        <TextView
                            android:id="@+id/activity_location_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_toStartOf="@+id/imageView14"
                            android:text="GPS" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textView2"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout_wezone_people"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="63dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_limit" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imageView6"
                            android:layout_toRightOf="@+id/imageView6"
                            android:text="인원 제한" />

                        <TextView
                            android:id="@+id/activity_regist_wezone_people_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView5"
                            android:layout_alignBottom="@+id/textView5"
                            android:layout_toLeftOf="@+id/activity_regist_wezone_people"
                            android:layout_toStartOf="@+id/activity_regist_wezone_people"
                            android:text="100명" />

                        <ImageView
                            android:id="@+id/activity_regist_wezone_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/arrow_drop_down" />


                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#e0e0e0"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_wezone_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/linearlayout_btn_wezone_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/selector_btn_switch"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/activity_regist_wezone_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            app:srcCompat="@drawable/ic_https_black" />

                        <TextView
                            android:id="@+id/wezone_block_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:layout_marginStart="11dp"
                            android:layout_toEndOf="@+id/activity_regist_wezone_black"
                            android:layout_toRightOf="@+id/activity_regist_wezone_black"
                            android:text="공개 ZONE" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textView2"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:orientation="vertical"></LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/black1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout1"
                android:background="#eeeeee"
                android:orientation="vertical"
                android:padding="5dp"></LinearLayout>

            <!-- 존 관리-->


            <LinearLayout
                android:id="@+id/linearLayout_wezone_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:id="@+id/linearlayout_btn_wezone_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/selector_btn_switch"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_notifications_active_black" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/imageView10"
                        android:layout_toRightOf="@+id/imageView10"
                        android:text="알림" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView15"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#e0e0e0"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/black1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout_wezone_zonein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="존 in" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/btn_chevron_right_black" />

                        <TextView
                            android:id="@+id/activity_zone_in_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView9"
                            android:layout_alignBottom="@+id/textView9"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/imageView12"
                            android:layout_toStartOf="@+id/imageView12"
                            android:layout_weight="1"
                            android:text="공지글 푸쉬"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textView9"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/black2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:background="#eeeeee"
                android:orientation="vertical"
                android:padding="5dp"></LinearLayout>


        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/header_layout"
        layout="@layout/header_layout" />


</RelativeLayout>
